/* pages/video/video.wxss */
.videoContainer{
  width: 100%;
  background-color: #d6d6d6;
}
.videoContainer .header {
  display: flex;
  padding: 10rpx;
}
.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}
.icon-search{
  margin-top: 10rpx;

}
.videoContainer .header .search {
  border: 1rpx solid #eee;
  flex: 1;
  margin: 0rpx 50rpx 0;
  height: 60rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #939594;
  background-color: #edefee;
  border-radius: 30rpx;  
}


/* 导航区域 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
  background-color: #D80000;
}


.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #d8d8d8;
  height: 60rpx;
  line-height: 60rpx;
}
.navScroll .navContent {
  height: 60rpx;
  box-sizing: border-box;
}


.navItem .active {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  background-color: #880700;
}


/* 视频列表 */
.videoScroll {
  margin-top: 12rpx;
  height: calc(100vh - 152rpx);
}
.videoItem {
  padding: 0 3%;
  background-color: #fff;
  margin-bottom: 20rpx;
}
