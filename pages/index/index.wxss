/* pages/index/index.wxss */

.indexContent {
    width: 100%;
    /* box-sizing: border-box; */
    overflow: hidden;
    padding: 20rpx;
    background-color: #ededed;
}
.search{
    position: relative;
    border: 1rpx solid #eee;
    margin: 0 50rpx 10rpx;
    height: 60rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    color: #939594;
    background-color: #edefee;
    border-radius: 30rpx; 
    z-index: 10;
}
.bg{
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 500rpx;
    border-bottom-left-radius: 60%;
    border-bottom-right-radius: 60%;
    background-color: #d80000 ;
}
.swiperContainer {
    position: relative;
    width: 100%;
    background-color: #fff;
}

.logo {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.user {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 300rpx;
    background-color: thistle;
}

.goStudy {
    width: 250rpx;
    height: 50rpx;
    border: 1px solid snow;
    text-align: center;
}

/* 轮播部分 */

.swiper {
    width: 100%;
    height: 300rpx;
    border-radius: 15rpx;
    overflow: hidden
}

.slide-image {
    width: 100%;
    height: 100%;
    background-size: cover;
}

/* 五个导航部分 */

.navContainer {
    display: flex;
    width: 100%;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
    font-size: 26rpx;
}

/* 图标样式 */

.iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: rgb(235, 9, 9);
    text-align: center;
    line-height: 100rpx;
    font-size: 50rpx;
    color: #fff;
}

/* 推荐歌曲 */

.recommendContainer {
    padding: 20rpx;
    height: 450rpx;
    background-color: #fff;
    margin-bottom: 15rpx;
}


/* 滑块内容 */

.scrollContainer {
    display: flex;
    width: 100%;
    height: 300rpx;
    margin-top: 40rpx;
}

.scroll-item {
    /* width: 200rpx; */
    /* height: 300rpx; */
    margin-right: 10rpx;
}

.scroll-item image {
    height: 200rpx;
    width: 200rpx;
    border-radius: 20rpx;

}

.scroll-item text {
    font-size: 26rpx;
    /* 单行文本溢出文本隐藏并省略号代替 块级元素生效*/
    /* display: block;
    overflow: hidden;
    text-overflow: ellipsis; */
    /* 强制文本不换行 */
    /* white-space: nowrap; */
    /* 多行文本溢出方法 */
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    /* 对齐模式 */
    -webkit-box-orient: vertical;
    /* 行数 */
    -webkit-line-clamp: 2;
}


/* 排行榜容器 */
.topList{
    /* width: 100%; */
    height: 660rpx;
    padding: 20rpx;
    background-color: #fff;
}
.topList .topListSwiper{
    margin-top: 22rpx;
    height: 500rpx;
    background-color: #fff;
}
.topList .topListSwiper .title{
    font-size: 30rpx;
    margin: 20rpx;
}
.topList .topListSwiper image{
    width: 113rpx;
    height: 100rpx;
    border-radius: 16rpx;
}
.topList .topListSwiper .musicItem{
    z-index: 10;
    display: flex;
    margin-bottom: 20rpx;
    width: 95%;
}
.musicItem:nth-child(even){
    background-color: #EDEDED;
}
.topList .topListSwiper .count{
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.topList .topListSwiper .musicName{
    width: 400rpx;
    height: 100rpx;
    /* text-align: center; */
    line-height: 100rpx;
    font-size: 30rpx;    
     /* 单行文本溢出文本隐藏并省略号代替 块级元素生效*/
    display: block;
    overflow: hidden;
    text-overflow: ellipsis; 
    /* 强制文本不换行 */
    white-space: nowrap;
}